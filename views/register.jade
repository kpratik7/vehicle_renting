extends layout

block content
    if errors
        each error, i in errors
            div.alert.alert-danger #{error.msg}
    .form-container
        .form-header 
            h4.page-header REGISTRATION
            p Please Register using the form below.          
        form(id="login-form", action="/users/register", method="post")
            .form-group
                div
                    label Name 
                        span(class='required') *
                    input.form-control(name='name', type='text', placeholder='Enter Name' required)
                div    
                    label E-mail 
                        span(class='required') *
                    input.form-control(name='email', type='email', placeholder='Enter Email' required)
                div    
                    label Username 
                        span(class='required') * 
                    input.form-control(name='username', type='text', placeholder='Enter Username' required)
                div    
                    label Password 
                        span(class='required') *
                    input.form-control(id="password", name='password', type='password', placeholder='Enter Password' required)
                div    
                    label Confirm Password 
                        span(class='required') *
                    input.form-control(name='password2', type='password', placeholder='Confirm Password' required)
                div
                    label 
                        span(class='required') * 
                        span  is for required fields
            input.btn.btn-primary(type='submit', name='submit',value='Register')
        

