extends layout

block content
    h2.page-header Book Vehicle
        if errors
            each error, i in errors
                div.alert.alert-danger #{error.msg}
    form(action="/users/bookvehicle", method="post")
        .form-group
            //- label Vehicle Plale Number
            //- input.form-control(name='vehicle_id', type='text', placeholder='Enter Vehicle Plale Number')
            input.form-control(name='username', type='text', value='#{user.username}' hidden)
            label Select
            select.form-control(name='vehicle_id')
                option(hidden) Please select an option
                    each vehicle in vehicles
                        option(value=vehicle.vehicle_id) #{vehicle.vehicle_name} - #{vehicle.vehicle_id}
            //- label Vehicle Manufacturer
            //- input.form-control(name='vehicle_manuf', type='password', placeholder='Enter Vehicle Manufacturer')
        input.btn.btn-primary(type='submit', name='submit',value='Book Vehicle')
    
