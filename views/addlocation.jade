extends layout

block content
    h2.page-header Add Location
    if errors
        each error, i in errors
            div.alert.alert-danger #{error.msg}
    form(action="/admin/addlocation", method="post", enctype='multipart/form-data')
        .form-group
            label Location Name 
            input.form-control(name='location_name', type='text', placeholder='Enter Location Name')
            label Location image
            .custom-file
                input#location_image.custom-file-input(name ='location_image' type='file')
                label.custom-file-label(for='location_image') Choose file
        input.btn.btn-primary(type='submit', name='submit',value='Add Vehicle')
    